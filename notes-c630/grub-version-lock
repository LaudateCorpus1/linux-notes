grub-common
grub-efi-arm64
grub-efi-arm64-bin
grub2-common

echo "grub-common hold" | sudo dpkg --set-selections
echo "grub-efi-arm64 hold" | sudo dpkg --set-selections
echo "grub-efi-arm64-bin hold" | sudo dpkg --set-selections
echo "grub2-common hold" | sudo dpkg --set-selections
sudo apt-mark hold grub-common
sudo apt-mark hold grub-efi-arm64
sudo apt-mark hold grub-efi-arm64-bin
sudo apt-mark hold grub2-common
sudo aptitude hold grub-common
sudo aptitude hold grub-efi-arm64
sudo aptitude hold grub-efi-arm64-bin
sudo aptitude hold grub2-common

